---
import Contact from "@components/sections/Contact.astro";
import Footer from "@components/sections/Footer.astro";
import Header from "@components/sections/Header.astro";
import MusicHero from "@components/sections/MusicHero.astro";
import MusicInstruments from "@components/sections/MusicInstruments.astro";
import MusicTeachers from "@components/sections/MusicTeachers.astro";
import MusicStatistics from "@components/sections/MusicStatistics.astro";
import MusicBenefits from "@components/sections/MusicBenefits.astro";
import Opinions from "@components/sections/Opinions.astro";
---

<head>
  <script type="module" src="/animations-init.js"></script>
  <script>
    // Cargar GSAP y ScrollTrigger secuencialmente
    (function() {
      // Cargar GSAP primero
      const gsapScript = document.createElement('script');
      gsapScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js';
      gsapScript.onload = function() {
        // Una vez cargado GSAP, cargar ScrollTrigger
        const scrollTriggerScript = document.createElement('script');
        scrollTriggerScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js';
        scrollTriggerScript.onload = function() {
          // Inicializar animaciones cuando ambos estén cargados
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initMusicGSAPAnimations);
          } else {
            initMusicGSAPAnimations();
          }
        };
        document.head.appendChild(scrollTriggerScript);
      };
      document.head.appendChild(gsapScript);
    })();

    function initMusicGSAPAnimations() {
      try {
        if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') {
          console.error('GSAP o ScrollTrigger no están disponibles');
          return;
        }

        gsap.registerPlugin(ScrollTrigger);
        
        ScrollTrigger.defaults({
          start: "top 80%",
          end: "bottom top",
          toggleActions: "play none none reverse"
        });

        initMusicPageAnimations();
        
        console.log('✅ GSAP y ScrollTrigger inicializados correctamente para página de música');
      } catch (error) {
        console.error('Error al inicializar GSAP:', error);
      }
    }

    function initMusicPageAnimations() {
      try {
        // Animación del Hero de Música
        const heroSection = document.querySelector('[data-animate="hero"]');
        if (heroSection) {
          const textElements = heroSection.querySelectorAll('h1, h2, p, .music-highlight, .language-badge, .cta, button');
          
          if (textElements.length > 0) {
            gsap.set(textElements, { 
              opacity: 0, 
              y: 60,
              scale: 0.95
            });

            gsap.to(textElements, {
              opacity: 1,
              y: 0,
              scale: 1,
              duration: 0.8,
              ease: "power2.out",
              stagger: 0.15,
              scrollTrigger: {
                trigger: heroSection,
                start: "top 90%"
              }
            });
          }
        }

        // Animación de Estadísticas de Música
        const statsSection = document.querySelector('[data-animate="stats"]');
        if (statsSection) {
          const statCards = statsSection.querySelectorAll('[data-stats="card"]');
          
          if (statCards.length > 0) {
            gsap.set(statCards, { 
              opacity: 0, 
              y: 80,
              scale: 0.9
            });

            gsap.to(statCards, {
              opacity: 1,
              y: 0,
              scale: 1,
              duration: 0.8,
              ease: "power2.out",
              stagger: 0.2,
              scrollTrigger: {
                trigger: statsSection,
                start: "top 80%"
              }
            });
          }
        }

        // Animación de Instrumentos (Grid)
        const instrumentsSection = document.querySelector('[data-animate="grid"]');
        if (instrumentsSection) {
          const instrumentCards = instrumentsSection.querySelectorAll('[data-grid="item"]');
          
          if (instrumentCards.length > 0) {
            gsap.set(instrumentCards, { 
              opacity: 0, 
              y: 80,
              scale: 0.9
            });

            gsap.to(instrumentCards, {
              opacity: 1,
              y: 0,
              scale: 1,
              duration: 0.8,
              ease: "power2.out",
              stagger: 0.15,
              scrollTrigger: {
                trigger: instrumentsSection,
                start: "top 80%"
              }
            });
          }
        }

        // Animación de Beneficios de Música
        const benefitsSection = document.querySelector('[data-animate="benefits"]');
        if (benefitsSection) {
          const formContainer = benefitsSection.querySelector('[data-benefit="form"]');
          const listContainer = benefitsSection.querySelector('[data-benefit="list"]');
          
          if (formContainer) {
            const formElements = formContainer.querySelectorAll('[data-benefit="title"], [data-benefit="subtitle"], [data-benefit="content"]');
            
            if (formElements.length > 0) {
              gsap.set(formElements, { 
                opacity: 0,
                x: -80,
                scale: 0.95
              });

              gsap.to(formElements, {
                opacity: 1,
                x: 0,
                scale: 1,
                duration: 0.8,
                ease: "power2.out",
                stagger: 0.15,
                scrollTrigger: {
                  trigger: formContainer,
                  start: "top 80%"
                }
              });
            }
          }

          if (listContainer) {
            const benefitItems = listContainer.querySelectorAll('[data-benefit="item"]');
            
            if (benefitItems.length > 0) {
              gsap.set(benefitItems, { 
                opacity: 0,
                x: 60,
                scale: 0.9
              });

              gsap.to(benefitItems, {
                opacity: 1,
                x: 0,
                scale: 1,
                duration: 0.6,
                ease: "power2.out",
                stagger: 0.1,
                scrollTrigger: {
                  trigger: listContainer,
                  start: "top 80%"
                }
              });
            }
          }
        }

        setTimeout(function() {
          ScrollTrigger.refresh();
        }, 100);
        
      } catch (error) {
        console.error('Error en initMusicPageAnimations:', error);
      }
    }
  </script>
</head>

<body class="music-layout">
  <Header />
  <div style="max-width: 1920px; margin: auto">
      <MusicHero 
        title="Descubre tu Talento Musical" 
        description="Clases personalizadas de piano, guitarra, violín, batería y más. <br> Profesores especializados que despiertan la pasión por la música en cada estudiante."
      />
  </div>
  <MusicStatistics />
  <div style="max-width: 1920px; margin: auto">
      <MusicInstruments />
      <MusicBenefits />
      <!-- <MusicTeachers /> -->
      <Opinions />
      <Contact />
  </div>
  <Footer />
</body>

<style>
  .music-layout {
    padding-top: 90px;
    transition: padding-top 0.3s ease;
    background: #FDFBFA;
  }

  @media screen and (max-width: 1280px) {
    .music-layout {
      padding-top: 80px;
    }
  }

  @media screen and (max-width: 700px) {
    .music-layout {
      padding-top: 70px;
    }
  }
</style>

