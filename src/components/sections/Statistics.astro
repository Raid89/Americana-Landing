---
import StaticsBlock from "@components/shared/StaticsBlock.astro";


const statistics = [
    {
        title: "Estudiantes impactados",
        value: 10000,
        text: "Estudiantes de más de 15 países confiaron en Voice Lab para transformar su relación con los idiomas y ganar confianza al comunicarse."
    },
    {
        title: "Horas de clase impartidas",
        value: 250000,
        text: "Sesiones dinámicas, personalizadas y enfocadas en resultados reales. Cada clase cuenta y deja huella."
    },
    {
        title: "Certificaciones en el último año",
        value: 1200,
        text: "Respaldamos el esfuerzo de nuestras estudiantes con avales reales para su desarrollo académico y profesional."
    },
]
---




<section class="statistics" data-animate="stats">
  {statistics.map((stat, i) => (
    <StaticsBlock value={stat.value} title={stat.title} text={stat.text} index={i} />
  ))}
</section>

<style>
.statistics {
    margin-top: 150px;
    background: linear-gradient(135deg, #FF8282 0%, #FF6363 100%);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 95px;
    padding: 40px 50px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(255, 99, 99, 0.3);
}

.statistics::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="30" cy="30" r="2"/></g></g></svg>');
    pointer-events: none;
}

.statistic-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #FFF;
    gap: 14px;

    .statistic-value {
        font-size: 34px;
        font-weight: 600;
    }

    h3 {
        font-size: 26px;
        font-weight: 500;
        margin: 0;
    }

    p {
        font-size: 18px;
        line-height: 24px;
        margin: 0;
    }
}

@media screen and (max-width: 1500px) {
    .statistics {
        gap: 50px;
        padding: 20px 30px;
    }

    .statistic-details {
        h3 {
            font-size: 22px;
        }
        p {
            font-size: 16px;
        }
        .statistic-value {
            font-size: 28px;
        }
    }
}

@media screen and (max-width: 1280px) {
    .statistics {
        gap: 30px;
        padding: 20px 20px;
        margin-top: 100px;
    }

    .statistic-details {
        gap: 10px;
        h3 {
            font-size: 18px;
        }
        p {
            font-size: 14px;
            line-height: 18px;
        }
        .statistic-value {
            font-size: 24px;
        }
    }
}

@media screen and (max-width: 1100px) {
    .statistics {
        gap: 30px;
        padding: 20px 20px;
        margin-top: 100px;
    }

    .statistic-details {
        gap: 10px;
        h3 {
            font-size: 14px;
        }
        p {
            font-size: 12px;
            line-height: 16px;
        }
        .statistic-value {
            font-size: 20px;
        }
    }
}

@media screen and (max-width: 800px)  {
    .statistics {
        flex-direction: column;
    }
}
</style>