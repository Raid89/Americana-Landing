<div id="information-active" class="information-item view-transition-target">
</div>
<!-- Items ocultos que vamos a clonar -->
<div id="information-templates" style="display: none;" data-animate>
  {
    InformationItems.map((item, index) => (
      <div class="information-item animate-fade-in" data-index={index}>
        <div class="information-image_dots">
