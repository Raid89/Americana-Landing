    .information-title {
      font-size: 34px;
    }

    .information-subtitle {
      font-size: 24px;
    }

    .information-paragraph {
      font-size: 16px;
    }
  }

  @media (max-width: 1300px) {
    .information-title {
      font-size: 36px;
    }

