<style>
  @import "@styles/animations.css";
  .information-item {
    padding: 120px 0px;
    display: flex;
    justify-content: center;
    max-width: 1280px;
    gap: 170px;
    margin: auto;
  }

  .information-image_dots {
    width: 50%;
    max-width: 516px;
  }

  @media (max-width: 1500px) {
    .information-item {
      gap: 70px;
      padding: 120px 80px;
    }
  }

  @media (max-width: 1300px) {
    .information-item {
      gap: 70px;
      padding: 120px 80px;
    }
  }

  @media (max-width: 1000px) {
    .information-item {
      gap: 35px;
      flex-direction: column;
      align-items: center;
      padding: 120px 30px;
    }
  }

