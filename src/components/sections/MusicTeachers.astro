      font-size: 48px;
    }

    .teacher-card {
      flex-direction: column !important;
      text-align: center;
      gap: 30px;
      padding: 35px;
    }

    .teacher-image {
      width: 200px;
      height: 200px;
    }

    .teacher-header h3 {
      font-size: 28px;
    }
  }

  @media screen and (max-width: 900px) {
    .music-teachers {
      padding: 60px 30px;
    }

    .teachers-header h2 {
      font-size: 36px;
    }

    .teachers-header p {
      font-size: 18px;
    }

    .teacher-card {
      padding: 30px;
      gap: 25px;
    }

    .teacher-image {
      width: 180px;
      height: 180px;
    }

    .teacher-header h3 {
      font-size: 24px;
    }

    .teacher-specialty {
      font-size: 18px !important;
    }

    .teacher-description {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 768px) {
    .music-teachers {
      padding: 60px 20px;
    }

    .teachers-header h2 {
      font-size: 32px;
    }

    .teachers-header p {
      font-size: 16px;
    }

    .teacher-card {
      padding: 25px;
    }

    .teacher-image {
      width: 160px;
      height: 160px;
    }

    .teacher-header h3 {
      font-size: 22px;
    }

    .teacher-specialty {
      font-size: 16px !important;
    }

    .teacher-education {
      font-size: 14px !important;
    }

    .teacher-description {
      font-size: 14px;
    }

    .teacher-instruments h4,
    .teacher-achievements h4 {
      font-size: 16px;
    }

    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .footer-highlight {
      padding: 30px 20px;
    }

    .footer-highlight h3 {
      font-size: 24px;
    }
  }

  @media screen and (max-width: 480px) {
    .music-teachers {
      padding: 40px 15px;
    }

    .teachers-header h2 {
      font-size: 28px;
    }

    .teacher-card {
      padding: 20px;
    }

    .teacher-image {
      width: 140px;
      height: 140px;
    }

    .teacher-badge {
      top: -5px;
      right: -5px;
      padding: 6px 10px;
      font-size: 10px;
      
      span {
        font-size: 12px;
      }
    }

    .schedule-btn {
      padding: 12px 20px;
      font-size: 14px;
    }

    .footer-highlight {
      padding: 25px 15px;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }
  }
</style>
