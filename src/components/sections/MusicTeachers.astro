<style>
  @import "@styles/animations.css";

  .music-teachers {
    padding: 120px 100px;
    background: #FDFBFA;
  }

  .teachers-header {
    text-align: center;
    margin-bottom: 80px;

    h2 {
      font-size: 64px;
      font-weight: 600;
      margin: 0 0 20px 0;
      background: linear-gradient(135deg, #212529, #FF6363);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    p {
      font-size: 20px;
      color: #666;
      margin: 0;
      font-weight: 500;
    }
  }

  .teachers-container {
    display: flex;
    flex-direction: column;
    gap: 80px;
    margin-bottom: 80px;
  }

  .teacher-card {
    display: flex;
    align-items: center;
    gap: 60px;
    background: white;
    border-radius: 30px;
    padding: 50px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    animation-delay: var(--delay);
    position: relative;
    overflow: hidden;
  }

  .teacher-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #FF6363, #FFB366, #66B2FF);
  }

  .teacher-card.reverse {
    flex-direction: row-reverse;
  }

  .teacher-image-container {
    position: relative;
    flex-shrink: 0;
  }

  .teacher-image {
    width: 300px;
    height: 300px;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .teacher-badge {
    position: absolute;
    top: -10px;
    right: -10px;
    background: #FF6363;
    color: white;
    padding: 10px 15px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    font-weight: 600;
    box-shadow: 0 5px 15px rgba(255, 99, 99, 0.3);

    span {
      font-size: 16px;
    }

    p {
      margin: 0;
    }
  }

  .teacher-content {
    flex: 1;
  }

  .teacher-header {
    margin-bottom: 25px;

    h3 {
      font-size: 36px;
      font-weight: 600;
      margin: 0 0 10px 0;
      color: #212529;
    }

    .teacher-specialty {
      font-size: 20px;
      color: #FF6363;
      font-weight: 600;
      margin: 0 0 8px 0;
    }

    .teacher-education {
      font-size: 16px;
      color: #666;
      margin: 0;
      font-style: italic;
    }
  }

  .teacher-description {
    font-size: 16px;
    line-height: 26px;
    color: #555;
    margin-bottom: 30px;
  }

  .teacher-instruments, .teacher-achievements {
    margin-bottom: 25px;

    h4 {
      font-size: 18px;
      font-weight: 600;
      margin: 0 0 15px 0;
      color: #333;
    }
  }

  .instruments-list {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .instrument-tag {
    background: rgba(255, 99, 99, 0.1);
    color: #FF6363;
    padding: 6px 15px;
    border-radius: 15px;
    font-size: 14px;
    font-weight: 500;
    border: 1px solid rgba(255, 99, 99, 0.2);
  }

  .teacher-achievements ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .teacher-achievements li {
    font-size: 15px;
    color: #555;
    margin-bottom: 8px;
  }

  .teacher-cta {
    margin-top: 30px;
  }

  .schedule-btn {
    background: linear-gradient(135deg, #FF6363, #FF8282);
    color: white;
    border: none;
    padding: 15px 30px;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 5px 15px rgba(255, 99, 99, 0.3);
  }

  .schedule-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 99, 99, 0.4);
  }

  .teachers-footer {
    text-align: center;
  }

  .footer-highlight {
    background: linear-gradient(135deg, #FF6363, #FF8282);
    color: white;
    padding: 50px;
    border-radius: 25px;
    box-shadow: 0 15px 35px rgba(255, 99, 99, 0.2);

    h3 {
      font-size: 32px;
      font-weight: 600;
      margin: 0 0 40px 0;
    }
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  .feature {
    text-align: center;

    .feature-icon {
      font-size: 40px;
      display: block;
      margin-bottom: 15px;
    }

    p {
      font-size: 16px;
      font-weight: 500;
      margin: 0;
    }
  }

  @media screen and (max-width: 1600px) {
    .music-teachers {
