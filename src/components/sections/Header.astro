---
import Logotipo from "@images/logotipo.webp";
import Navigation from "@components/shared/Navigation.astro";
import NavDropdown from "@components/shared/NavDropdown.astro";
---

<header>
  <div class="header-main_container">
    <div class="header-logo_container">
      <img
        src={Logotipo.src}
        width={Logotipo.width}
        height={Logotipo.height}
        alt="Logo Voice Lab"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
    </div>

    <div class="navigation-list">
      <Navigation />
    </div>

    <div class="navigation-dropdown">
      <NavDropdown />
    </div>
  </div>
</header>

<style>
  .header-main_container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25px 30px;
    box-shadow: 1px 0 19px rgb(0 0 0 / 31%);
  }

  .header-logo_container img {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .navigation-dropdown {
    display: none;
  }

  @media screen and (max-width: 1280px) {
    .header-main_container {
      padding: 20px 10px;
    }
    .header-logo_container {
      width: 142px;
    }
  }

  @media screen and (max-width: 700px) {
    .navigation-dropdown {
      display: block;
    }

    .navigation-list {
      display: none;
    }
  }
</style>
