---
import { Image } from "astro:assets";
import Logotipo from "@images/logotipo.webp";
import Navigation from "@components/shared/Navigation.astro";
import NavDropdown from "@components/shared/NavDropdown.astro";
---

<header>
  <div class="header-main_container">
    <div class="header-logo_container">
      <Image
        src={Logotipo}
        loading="lazy"
        widths={[142, Logotipo.width]}
        sizes={`(max-width: 1000px) 142px, ${Logotipo.width}px`}
        alt="Una descripciÃ³n de mi imagen."
      />
    </div>

    <div class="navigation-list">
      <Navigation />
    </div>

    <div class="navigation-dropdown">
      <NavDropdown />
    </div>
  </div>
</header>

<style>
  .header-main_container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25px 30px;
    box-shadow: 1px 0 19px rgb(0 0 0 / 31%);
  }

  .header-logo_container img {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .navigation-dropdown {
    display: none;
  }

  @media screen and (max-width: 1280px) {
    .header-main_container {
      padding: 20px 10px;
    }
    .header-logo_container {
      width: 142px;
    }
  }

  @media screen and (max-width: 700px) {
    .navigation-dropdown {
      display: block;
    }

    .navigation-list {
      display: none;
    }
  }
</style>
